{
  "name": "spark",
  "version": "0.1.0",
  "description": "Default preset for Enlightenment Web Components",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "!dist/main.*",
    "!dist/enlightenment",
    "!*.woff",
    "!*.woff2",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "tsc": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "predev": "rm -rf ./dist/enlightenment && cp -a ./node_modules/@toolbarthomas/enlightenment/dist ./dist/enlightenment",
    "dev": "node node/esbuild.assets.mjs -s -d -w & node node/esbuild.spark.mjs -n=src/enlightenment -d -w --name=../enlightenment/Enlightenment",
    "build": "node node/esbuild.assets.mjs -s -m & node node/esbuild.spark.mjs -n=src/enlightenment --cdn=https://cdn.jsdelivr.net/npm/@toolbarthomas/enlightenment@0.17.0/dist/Enlightenment.js",
    "postbuild": "node node/esbuild.spark.mjs -n=src/enlightenment -m --cdn=https://cdn.jsdelivr.net/npm/@toolbarthomas/enlightenment@0.17.0/dist/Enlightenment.min.js",
    "storybook:dev": "npm run dev & storybook dev -p 6006",
    "prestorybook:build": "npm run build",
    "storybook:build": "storybook build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toolbarthomas/spark.git"
  },
  "keywords": [
    "LitElement",
    "WebComponents",
    "Storybook"
  ],
  "author": "Thomas van der Velde <contact@toolbarthomas.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toolbarthomas/spark/issues"
  },
  "homepage": "https://github.com/toolbarthomas/spark#readme",
  "devDependencies": {
    "@storybook/addon-essentials": "^8.3.1",
    "@storybook/addon-interactions": "^8.3.1",
    "@storybook/addon-links": "^8.3.1",
    "@storybook/blocks": "^8.3.1",
    "@storybook/html": "^8.3.1",
    "@storybook/html-vite": "^8.3.1",
    "@storybook/test": "^8.3.1",
    "@toolbarthomas/argumentje": "^0.1.4",
    "@toolbarthomas/enlightenment": "^0.17.0",
    "esbuild": "^0.23.1",
    "prettier": "^3.3.3",
    "sass": "^1.78.0",
    "storybook": "^8.3.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@fontsource/dm-sans": "^5.1.0",
    "@fontsource/playfair-display": "^5.1.0"
  }
}
